<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bgdark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_myfossil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:textSize="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/ralewaybd"
        android:text="MyFossil" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_myfossil"
        android:layout_alignStart="@+id/text_myfossil"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_15sdp"
        android:text="Gradebook, modernized." />


</RelativeLayout>
