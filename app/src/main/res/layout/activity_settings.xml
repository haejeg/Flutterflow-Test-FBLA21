<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/ralewaybd"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp" />

    <ImageView
        android:id="@+id/imageview_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:translationZ="-1dp"
        app:srcCompat="@drawable/image_bgdark" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="sans-serif"
        android:text="Configurate the app to your liking."
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_temp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_37sdp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_minus6sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:thumb="@drawable/custom_thumb"
        app:showText="false"
        app:track="@drawable/custom_track" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="sans-serif-light"
        android:text="Temperature mode"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/savebutton"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/_5sdp"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        tools:ignore="TouchTargetSizeCheck">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:fontFamily="sans-serif-light"
            android:text="Save Settings"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
