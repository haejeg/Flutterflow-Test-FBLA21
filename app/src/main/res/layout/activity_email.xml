<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/ralewaybd"
        android:text="Send an email"
        android:textColor="@color/white"
        android:textSize="@dimen/_30sdp" />

    <ImageView
        android:id="@+id/imageview_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:translationZ="-1dp"
        app:srcCompat="@drawable/image_bgdark" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_25sdp"
        android:backgroundTint="#302b40"
        android:text="Send" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="384dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email title"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="384dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Recipients"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="384dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_above="@+id/button2"
        android:layout_below="@+id/editTextTextPersonName5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:ems="10"
        android:gravity="start"
        android:inputType="textPersonName"
        android:lines="10"
        android:text="Message"
        android:textColor="@color/white" />


</RelativeLayout>
